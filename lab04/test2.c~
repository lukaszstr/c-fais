# include <stdio.h>
# include <stdlib.h>
/* # include <math.h> */
int silnia (int n)
{
if (n<2) 
	{
	return 1;
	}
return n*silnia(n-1);
}
int main (int argc, char **argv) 
{
int n;
if (argc<2)
 	{printf("Podaj n! \n"); 
	 return 1;	
	}
n = atoi(argv[1]);
if (n<0)
	{ printf("n ma być liczbą dodatnią!");
	 return 2;
	}
/* if (n <=1)
 *	{printf("%i \n", 1);
 *	return 0;
 *	}
 * for (i=1; i<=n; i++)
 *	{ 
 *	silnia = silnia*i;
 *	} 
*/
printf("n=%i \n n!=%i \n", n, silnia(n);
return 0;
}
